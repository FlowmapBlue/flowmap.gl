{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "jsx": "preserve"
  },
  "exclude": ["**/node_modules", "**/dist/**/*"],
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "**/typings.d.ts",
    "types.d.ts"
  ]
}
